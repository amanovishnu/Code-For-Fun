<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="controller.ForgotPasswordController">
   <children>
      <Label alignment="CENTER" layoutX="99.0" layoutY="42.0" prefHeight="35.0" prefWidth="304.0" text="Recover your Password">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="105.0" text="Email Id :">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="151.0" text="Question :">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="193.0" text="Answer :">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="forgotemail" layoutX="140.0" layoutY="102.0" prefWidth="220.0" promptText="Enter your Email Address" />
      <ComboBox fx:id="forgotcombobox" layoutX="140.0" layoutY="147.0" prefHeight="20.0" prefWidth="220.0" promptText="Select your Security Question ?" />
      <TextField fx:id="forgotanswer" layoutX="140.0" layoutY="190.0" prefWidth="220.0" promptText="Enter your Security Answer" />
      <Button layoutX="140.0" layoutY="235.0" mnemonicParsing="false" onAction="#recoveraccount" prefWidth="222.0" text="Login to Account">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font></Button>
      <ImageView fitHeight="150.0" fitWidth="167.0" layoutX="396.0" layoutY="85.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/forgot.png" />
         </image>
      </ImageView>
      <Label fx:id="forgotlabelstatus" alignment="CENTER" layoutX="419.0" layoutY="254.0" prefHeight="17.0" prefWidth="112.0" text="Recover Status" textFill="#ee0d0d">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Hyperlink layoutX="187.0" layoutY="274.0" onAction="#returntologinpage" text="Return to Login Page">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Hyperlink>
   </children>
</AnchorPane>
